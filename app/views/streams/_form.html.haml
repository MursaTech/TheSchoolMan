= form_for @stream do |f|
  - if @stream.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stream.errors.count, "error")} prohibited this stream from being saved:"
      %ul
        - @stream.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :form
    = f.text_field :form
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :student
    = f.text_field :student
  .actions
    = f.submit 'Save'
