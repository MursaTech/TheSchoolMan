/ .row
/ 	.col-lg-8
%section.panel
	= form_for @stream do |f|
		.panel-body
			- if @stream.errors.any?
				#error_explanation
					%h2= "#{pluralize(@stream.errors.count, "error")} prohibited this stream from being saved:"
					%ul
						- @stream.errors.full_messages.each do |msg|
							%li= msg
			.form-group
				= f.label :name
				.iconic-input
					%i.fa.fa-home
					= f.text_field :name, class: "form-control"
			.form-group
				= f.label :form, "Parent Class"
				%select.form-control{type: "text", name: "stream[form_id]"}
					- Form.all.each do |form|
						%option{value: form.id}
							= form.name
			.form-group
				= f.label :user, "Class Teacher"
				%select.form-control{type: "text", name: "stream[user_id]"}
					- User.where(user_type: "Teacher").each do |teacher|
						%option{value: teacher.id}
							= teacher.name
			.form-group
				= f.label :student, "Class Prefect"
				%select.form-control{type: "text", name: "stream[student_id]"}
					- Student.all.each do |student|
						%option{value: student.id}
							= student.name
		.panel-footer
			.actions.pull-right
				%button.btn.btn-primary.btn-rounded{"data-original-title" => "", :title => "", :type => "submit"}
					%i.fa.fa-save
					Save


