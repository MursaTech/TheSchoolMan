= form_for @attendance do |f|
  - if @attendance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attendance.errors.count, "error")} prohibited this attendance from being saved:"
      %ul
        - @attendance.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :student
    = f.text_field :student
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :stream
    = f.text_field :stream
  .field
    = f.label :present
    = f.check_box :present
  .actions
    = f.submit 'Save'
