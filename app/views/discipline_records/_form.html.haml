= form_for @discipline do |f|
  - if @discipline.errors.any?
    #error_explanation
      %h2= "#{pluralize(@discipline.errors.count, "error")} prohibited this discipline from being saved:"
      %ul
        - @discipline.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :student
    = f.text_field :student
  .field
    = f.label :offense
    = f.text_field :offense
  .field
    = f.label :punishment
    = f.text_field :punishment
  .field
    = f.label :level
    = f.text_field :level
  .actions
    = f.submit 'Save'
