.row
  .col-lg-8
    %section.panel
      = form_for @subject do |f|
        .panel-body
          - if @subject.errors.any?
            #error_explanation
              %h2= "#{pluralize(@subject.errors.count, "error")} prohibited this subject from being saved:"
              %ul
                - @subject.errors.full_messages.each do |msg|
                  %li= msg
          .form-group
            = f.label :name
            .iconic-input
              %i.fa.fa-book
              = f.text_field :name, class: "form-control"
        .panel-footer
          .actions.pull-right
            %button.btn.btn-primary.btn-rounded{"data-original-title" => "", :title => "", :type => "submit"}
              %i.fa.fa-save
              Save
