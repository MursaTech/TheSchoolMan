= form_for @student do |f|
  - if @student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@student.errors.count, "error")} prohibited this student from being saved:"
      %ul
        - @student.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :dob
    = f.datetime_select :dob
  .field
    = f.label :admission_number
    = f.text_field :admission_number
  .field
    = f.label :account
    = f.text_field :account
  .field
    = f.label :guradian
    = f.text_field :guradian
  .actions
    = f.submit 'Save'
